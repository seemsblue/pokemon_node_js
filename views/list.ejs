<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

  <%- include('nav.ejs')%>

  <input class="search">
  <button class="search-send">search</button>
  <script>
    document.querySelector(".search-send").addEventListener('click',function(){
      let val = document.querySelector('.search').value
      console.log(val)
      location.href='/search?val='+val
    })
  </script>

  <div class="white-bg">
    <%for(let i=0;i < posts.length;i++){%>
    <div class="list-box">
      <h4>
        <a href="/detail/<%=posts[i]._id%>"><%= JSON.stringify(posts[i].title) %></a>
        <a href="/edit/<%=posts[i]._id%>">✏️</a>
        <span class="delete" data-id="<%=posts[i]._id%>">tt</span>
      </h4>
      <p><%= (posts[i].content) %></p>
      <p><%= (posts[i].category)%></p>
    </div>
  <%}%>
  </div>

  <div class="pagination">
    
    <%if(pagination.now>3){%>
      <button class="page-btn" onclick="window.location.href='/list/<%= pagination.now - 3 %>'"><</button>
    <%}%>
    <%for(let i=2;i>0;i--){%>
      <%if(pagination.now-i<=0)continue;%>
        <button class="page-btn" onclick="window.location.href='/list/<%= pagination.now - (i) %>'"><%= pagination.now - (i) %></button>
    <%}%>
    <button class="page-btn"><%= pagination.now%></button>
    <%for(let i=0;i < (pagination.next) ;i++){%>
      <%if(i>=2)break;%>
      <button class="page-btn" onclick="window.location.href='/list/<%= pagination.now + (i + 1) %>'"><%= pagination.now + (i + 1) %></button>
    <%}%>
    <%if(pagination.next>2){%>
      <button class="page-btn" onclick="window.location.href='/list/<%= pagination.now + 3 %>'">></button>
    <%}%>
  </div>
  <script>
    for(let i =0;i<'<%=posts.length%>';i++){
    document.querySelectorAll('.delete')[i].addEventListener('click',function(e){
      fetch('/delete?docid='+e.target.dataset.id,{
        method:'DELETE',
      })
      .then((r)=>r.text())
      .then((r)=>{
        e.target.parentElement.parentElement.style.display='none'
      })
    })
  }
  </script>
</body>
</html>